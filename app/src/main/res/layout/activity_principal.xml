<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".PrincipalActivity">

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="50dp"
        app:layout_constraintHorizontal_bias="0.05"
        android:src="@drawable/ic_bank"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/white" />

    <TextView
        android:id="@+id/txt_saudacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/img_logo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"
        app:layout_constraintHorizontal_bias="0.05"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:text="Trazer do Shared"/>

    <TextView
        android:id="@+id/txt_agencia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/img_logo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="80dp"
        app:layout_constraintHorizontal_bias="0.05"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:text="AG: 0001 CC: 454654-4"/>


    <View
        android:id="@+id/bloco"
        android:layout_width="match_parent"
        android:layout_height="630dp"
        app:layout_constraintTop_toBottomOf="@id/img_logo"
        android:layout_marginTop="30dp"
        android:background="@color/white"/>


    <TextView
        android:id="@+id/txt_saldo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/bloco"
        app:layout_constraintRight_toRightOf="@id/bloco"
        app:layout_constraintTop_toTopOf="@id/bloco"
        app:layout_constraintHorizontal_bias="0.08"
        android:layout_marginTop="50dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#6C6969"
        android:text="SALDO"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/txt_saldo"
        app:layout_constraintTop_toTopOf="@id/bloco"
        app:layout_constraintRight_toRightOf="@id/bloco"
        app:layout_constraintHorizontal_bias="0.18"
        android:layout_marginTop="44dp"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/blue"
        android:text="R$ 50,00"/>

</androidx.constraintlayout.widget.ConstraintLayout>